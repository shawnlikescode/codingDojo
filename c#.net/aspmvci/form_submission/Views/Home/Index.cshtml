@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="text-center">
        <form action="" method="POST">
                    <div class="form-group">
                        <input asp-for="first_name" placeholder="Enter First Name" class="form-control"> 
                        <p asp-validation-for="first_name" class="text-danger"></p>
                    </div>

                    <div class="form-group">
                        <input asp-for="last_name" placeholder="Enter Last Name" class="form-control">
                        <p asp-validation-for="last_name" class="text-danger"></p>
                    </div>

                    <div class="form-group">
                        <input asp-for="age" placeholder="Enter Age" class="form-control">
                        <p asp-validation-for="age" class="text-danger"></p>
                    </div>

                    <div class="form-group">
                        <input asp-for="email" placeholder="Enter Email" class="form-control">
                        <p asp-validation-for="email" class="text-danger"></p>
                    </div>

                    <div class="form-group">
                        <input asp-for="password" placeholder="Enter Password" class="form-control">
                        <p asp-validation-for="password" class="text-danger"></p>
                    </div>
            <input type="Submit" value="Submit" class="btn btn-primary"/>
        </form>
</div>
